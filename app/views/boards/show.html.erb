<% genre=['マンガ','アニメ','ドラマ','映画','雑談','その他' ] %>
<header>
  <div class="header-item">
    <%= image_tag "site_title_image.jpg", alt: "タイトル画像", id: 'title_image', class: "title_image" %>
    <ul>
      <li><%= link_to 'ログアウト', login_path %></li>
      <li><%= link_to '掲示板一覧', board_index_path %></li>
    </ul>
  </div>
</header>
<main>
  <div class="container">
    <div class="board_info">
      掲示板番号：<%= @board.id%><br>
      掲示板名　：<%= @board.board_name %><br>
      作成日時　：<%= @board.created_at.strftime("%Y-%m-%d %H:%M") %><br>
      <%= link_to '編集', board_edit_path %>|<%= link_to '削除', "/board/#{@board.id}", method: :delete, data: {confirm: "掲示板#{@board.board_name}を削除します。よろしいですか？"} %><br>
      <%= link_to '掲示板一覧に戻る', board_index_path %>
    </div>
  </div>
</main>
<footer>
</footer>
